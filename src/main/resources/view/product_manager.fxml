<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="662.0" prefWidth="945.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.icet.controller.ProductController">

    <BorderPane prefHeight="662.0" prefWidth="951.0" style="-fx-background-color: #FFFFFF;" xmlns:fx="http://javafx.com/fxml">
        <top>
            <HBox alignment="CENTER" spacing="10" style="-fx-padding: 20; -fx-background-color: #01a3a4;">
                <Label style="-fx-font-size: 24px; -fx-text-fill: white;" text="Product Management" />
            </HBox>
        </top>

        <center>
            <TableView fx:id="productTable" prefHeight="400" prefWidth="800" style="-fx-padding: 20;">
                <columns>
                    <TableColumn fx:id="productIdColumn" prefWidth="100" text="Product ID" />
                    <TableColumn fx:id="productNameColumn" prefWidth="200" text="Product Name" />
                    <TableColumn fx:id="productCategoryColumn" prefWidth="150" text="Category" />
                    <TableColumn fx:id="productPriceColumn" prefWidth="100" text="Price" />
                    <TableColumn fx:id="productStockColumn" prefWidth="100" text="Stock" />
                </columns>
            </TableView>
        </center>

        <bottom>
            <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
                <HBox alignment="CENTER" spacing="10">
                    <TextField fx:id="productNameField" prefWidth="150" promptText="Product Name" />
                    <TextField fx:id="productCategoryField" prefWidth="100" promptText="Category" />
                    <TextField fx:id="productPriceField" prefWidth="100" promptText="Price" />
                    <TextField fx:id="productStockField" prefWidth="100" promptText="Stock" />
                </HBox>

                <HBox alignment="CENTER" spacing="10">
                    <Button onAction="#handleAddProduct" styleClass="action-button" text="Add Product" />
                    <Button onAction="#handleUpdateProduct" styleClass="action-button" text="Update Product" />
                    <Button onAction="#handleDeleteProduct" style="-fx-background-color: red; -fx-text-fill: white;" text="Delete Product" />
                </HBox>
            </VBox>
        </bottom>
    </BorderPane>

</AnchorPane>
